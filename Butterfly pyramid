//Pattern 1:
//Number traingale

#include<stdio.h>

int main(){
   for(int i=1;i<=4;i++){
       for(int j=1;j<=i;j++){
           printf("*");
       }
       int space = 2*4 - 2*i;
       for(int j=1;j<=space;j++){
           printf(" ");
       }
       for(int j=1;j<=i;j++){
           printf("*");
       }
       printf("\n");
   }
   for(int i=4;i>=0;i--){
       for(int j=1;j<=i;j++){
           printf("*");
       }
       int space = 2*4 - 2*i;
       for(int j=1;j<=space;j++){
           printf(" ");
       }
       for(int j=1;j<=i;j++){
           printf("*");
       }
       printf("\n");
   }
}
